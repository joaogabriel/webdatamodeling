<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" title="{resourceManager.getString('messages', 'recuperar.tltRecuperar')}" width="400" height="300">
	<mx:Script>
		<![CDATA[
			import br.edu.ucb.webdatamodeling.other.pfp.rsscube.models.MainModel;
			
			[Bindable]
	      	private var model:MainModel = MainModel.GetInstance();
		]]>
	</mx:Script>
	<mx:VBox horizontalAlign="center" verticalAlign="middle" width="100%" height="100%">
		<mx:Form width="100%">
			<mx:FormItem label="E-mail" width="100%">
				<mx:TextInput id="email" width="100%"/>
			</mx:FormItem>
		</mx:Form>
		<mx:HBox horizontalAlign="center" width="100%">
			<mx:Button label="{resourceManager.getString('messages', 'recuperar.btnRecuperar')}"/>
			<mx:Button label="{resourceManager.getString('messages', 'recuperar.btnCancelar')}" click="model.cubeSide = 'Top'"/>
		</mx:HBox>
	</mx:VBox>
</mx:Panel>
