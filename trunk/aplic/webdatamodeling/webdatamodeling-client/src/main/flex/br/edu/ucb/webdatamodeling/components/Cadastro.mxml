<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
	title="{resourceManager.getString('messages', 'cadastro.tltCadastro')}"
	width="400" height="300"
	creationComplete="init()">
	
	<mx:Script>
		<![CDATA[
			import br.edu.ucb.webdatamodeling.controller.CadastroController;
			
			private var _controller:CadastroController;
			
			private function init():void
			{
				_controller = new CadastroController(this); 
			}
		]]>
	</mx:Script>
	<mx:Form width="100%">
		<mx:FormItem label="{resourceManager.getString('messages', 'cadastro.nome')}" width="100%">
			<mx:TextInput id="txtNome" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString('messages', 'cadastro.sobrenome')}" width="100%">
			<mx:TextInput id="txtSobrenome" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="E-mail" width="100%">
			<mx:TextInput id="txtEmail" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString('messages', 'cadastro.senha')}" width="100%">
			<mx:TextInput id="txtSenha" displayAsPassword="true" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString('messages', 'cadastro.dataNascimento')}" width="100%">
			<mx:DateField id="dtfDataNascimento" showToday="true" formatString="DD/MM/YYYY"
				dayNames="['D','S','T','Q','Q','S','S']" 
				monthNames="['Janeiro','Fevereiro','MarÃ§o','Abril','Maio','Junho',
				'Julho','Agosto','Setembro','Outubro','Novembro','Dezembro']" width="100%"/>
		</mx:FormItem>
		<mx:FormItem label="{resourceManager.getString('messages', 'cadastro.dataCadastro')}" width="100%">
			<mx:TextInput id="txtDataCadastro" editable="false" creationComplete="_controller.novaData()" width="100%"/>
		</mx:FormItem>
	</mx:Form>
	<mx:HBox horizontalAlign="center" width="100%">
		<mx:Button label="{resourceManager.getString('messages', 'cadastro.btnCadastrar')}" click="_controller.cadastrar()"/>
		<mx:Button label="{resourceManager.getString('messages', 'cadastro.btnLimpar')}" click="_controller.limparCampos()"/>
		<mx:Button label="{resourceManager.getString('messages', 'cadastro.btnCancelar')}" click="_controller.model.cubeSide = 'Front'"/>
	</mx:HBox>
</mx:Panel>
